<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuizFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/toChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="648dp"
            android:text="@string/chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/question"
            android:layout_width="351dp"
            android:layout_height="110dp"
            android:layout_marginTop="144dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toChat" />

        <Button
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/nextQuestion"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <Button
            android:id="@+id/b_yes"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="184dp"
            android:text="@string/b_yes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextQuestion" />

        <Button
            android:id="@+id/b_no"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="48dp"
            android:text="@string/b_no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextQuestion" />

        <TextView
            android:id="@+id/response"
            android:layout_width="310dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextQuestion"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/rightAnswersLabel"
            android:layout_width="124dp"
            android:layout_height="26dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="72dp"
            android:text="@string/rightAnswers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toChat" />

        <TextView
            android:id="@+id/wrongAnswers"
            android:layout_width="124dp"
            android:layout_height="28dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="56dp"
            android:text="@string/wrongAnswers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toChat" />

        <TextView
            android:id="@+id/rightAnswersNum"
            android:layout_width="28dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="128dp"
            app:layout_constraintStart_toEndOf="@+id/rightAnswersLabel"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />

        <TextView
            android:id="@+id/WrongAnswersNum"
            android:layout_width="28dp"
            android:layout_height="27dp"
            android:layout_marginTop="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toEndOf="@+id/wrongAnswers"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>