<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="API">
        <EditTextPreference
            app:defaultValue="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"
            app:key="api_token"
            app:title="API Token"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <DropDownPreference
        app:allowDividerAbove="true"
        app:defaultValue="Custom"
        app:enabled="true"
        app:entries="@array/entries"
        app:entryValues="@array/entry_values"
        app:key="sys_message_dropdown"
        app:title="System Message"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:defaultValue="Bitte antworte auf jede Frage mit 42."
        android:key="custom_sys_message"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:useSimpleSummaryProvider="true"
        android:title="Custom System Message" />
</PreferenceScreen>